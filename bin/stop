#!/bin/bash
#
# DMC Stop Script
########################################################################

destroy() {
	if [ -n "$CONTAINERS" ]; then
		echo "STOPPING CONTAINERS"
		for CONTAINER in ${CONTAINERS[@]}; do
			drop | sort -u
		done
	fi
}

drop() {
	docker kill "$CONTAINER" 2>/dev/null
	docker rm -f "$CONTAINER"
}

search() {
	CONTAINERS=$(docker ps | grep -v -e ^CONTAINER | awk '{print $NF}')
}


# shut it down
search && destroy

