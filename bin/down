#!/bin/bash -e
#
# DMC Down Script
########################################################################

# source configuration
. bin/env

# stop application
docker-compose down -v --rmi all --remove-orphans

# remove application images
docker rmi $(docker images |grep -v -e ^REPO -e node -e redis |awk '{print $3}') 2>/dev/null || true
docker-compose -f docker-environment.yml down

# stop private network
docker network rm "$APPLICATION"
