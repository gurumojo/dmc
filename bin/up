#!/bin/bash -e
#
# DMC Up Script
########################################################################

# source configuration
VERBOSE=1 . bin/env &>/dev/null

if [ "${DOCKER_VOLUMES[*]}" == "" ]; then
	bin/initialize || true
fi

# start private network
NETWORK=$(docker network ls | grep -c "$APPLICATION") || true
(( $NETWORK )) || docker network create "$APPLICATION"

# start application
docker-compose up -d
